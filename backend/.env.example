# Server Configuration
HOST=0.0.0.0
PORT=8080

# Vector Database Configuration
DIMENSION=768
MAX_VECTORS=100000

# Persistence Configuration
SNAPSHOT_PATH=snapshot.bin
WAL_PATH=wal.bin
SNAPSHOT_INTERVAL_SEC=3600
WAL_FLUSH_INTERVAL_SEC=1

# Logging
RUST_LOG=info

# Gemini API (required for embedding service)
# For drug discovery, we use Python embeddings, so this can be a dummy value
GEMINI_API_KEY=dummy-gemini-key-not-used-for-drug-discovery

# Drug Discovery Configuration
# Drugs collection will use dimension=2048 (Morgan fingerprints)
DRUG_COLLECTION_DIMENSION=2048
